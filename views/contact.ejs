<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Contact</h2>
      <% if(msg.length !== 0 ){ %> 
        <div class="alert alert-success" role="alert">
          <%= msg %> 
        </div>
      <% } %> 
      <a href="/contact/add" class="btn btn-primary mb-2">Tambah Data Contact</a>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">No.</th>
            <th scope="col">Nama</th>
            <th scope="col">Nomor Hp</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if(data.length === 0){ %> 
            <tr>
              <td colspan="4">
                <div class="alert alert-danger fw-bold" role="alert">
                  Data contact masih kosong.
                </div>
              </td>
            </tr>
          <% } %>
            <% data.forEach((contact,index) => { %>
                <tr>
                  <th scope="row"><%= index + 1 %> </th>
                  <td><%= contact.nama %></td>
                  <td><%= contact.noHP %> </td>
                  <td><a href="contact/<%= contact._id %>" class="text-white btn badge rounded-pill bg-primary"><i class="bi bi-info-circle"></i> detail</a href=""></td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    </div>
    </div>
  </div>
</div>
<script>
  document.head.insertAdjacentHTML('beforeend','<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">')
</script>